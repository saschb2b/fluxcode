{
  "name": "my-v0-project",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "android": "npm run build:mobile && cap sync && cap open android",
    "build": "next build",
    "build:mobile": "next build",
    "cap:add:android": "cap add android",
    "cap:build": "npm run build:mobile && cap sync",
    "cap:init": "cap init",
    "cap:open:android": "cap open android",
    "cap:sync": "cap sync",
    "dev": "next dev",
    "electron:build": "next build && electron-builder",
    "electron:build:all": "next build && electron-builder --win --linux",
    "electron:build:linux": "next build && electron-builder --linux",
    "electron:build:win": "next build && electron-builder --win",
    "electron:dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "lint": "eslint .",
    "start": "next start"
  },
  "dependencies": {
    "@capacitor/android": "^6.2.0",
    "@capacitor/core": "^6.2.0",
